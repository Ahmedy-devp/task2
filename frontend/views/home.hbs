{{>header}}
{{>navbar}}
<table class="table table-bordered">
    <thead>
        <tr class="text-center">
            <th>Title</th>
            <th>Content</th>
            <th>Status</th>
            <th colspan="4" class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
       {{#if isEmpty}}
        <tr class="alert alert-danger">
            <td colspan="6">No Tasks Yet</td>
        </tr>
        {{else}}
        {{#each data}}
        <tr class="text-center">
            <td>{{title}}</td>
            <td>{{content}}</td>
            {{#if status}}
        
            <div class="abc">
                <td class="text-success">Completed</td>
            </div>
             {{else}}
             <div class="xyz">
            <td class="text-danger">not completed</td>
            </div>
             {{/if}}
           
            
           
            <td><a href="/single/{{_id}}" class="btn btn-primary">Show</a></td>
            <td><a href="/edit/{{_id}}" class="btn btn-warning">Edit</a></td>
            <td><a href="/del/{{_id}}" class="btn btn-danger">Delete</a></td>
        </tr>
        {{/each}}
      {{/if}}
    </tbody>
</table>
{{>footer}}